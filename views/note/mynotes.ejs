<%- include("../partials/header") %>
    <title><%= title %></title>
  </head>
  <body>
        <%- include("../partials/navbar")%>
    <div class="container">
      <div class="row">
        <h1 class="text-">My Notes</h1>
      </div>

          <div class="col-md-12">
            <div class="d-flex align-items-end justify-content-end">
              <a class="float-right" href="/simpnotes/takenote" ><button class="btn btn-primary">New Note</button></a>
            </div>
          </div>

        <div class="row justify-content-center col-md-12">

          <% if (notes.length < 1) { %>

            <div class="mt-5 col-md-12">
              <h3 class="text-center">Nothing here yet.</h3>
            </div>

          <% } %>

          <% if (notes) {%>
            <div class="row mt-5 col-md-6">
                <% for (note of notes) {%>
                    <div class="row col-md-12 mt-2 note-wrapper">
                      <div class="col-md-6">
                        <h4><%=note.subject%></h4>
                      </div>
                      <div class="col-md-6 d-flex justify-content-end">
                        <a href="/simpnotes/edit/<%=note._id%>"><button class="btn btn-primary btn-edit">
                          Edit
                        </button>
                        </a>
                            <form action="/simpnotes/delete/<%= note._id %>" method="post">
                              <button class="btn btn-danger" onclick="return confirm(`Are you sure you want to delete?`)">Delete</button>
                            </form>
                      </div>
                      <div>
                        <div class="mt-2">
                          <p><%= note.body %></p>
                          <p class="badge bg-success"><%= note.category%></p>
                          <p class="date">Created on <%= `${note.createdAt}`.split(' ').slice(0,5).join(' ') %></p>
                        </div>
                      </div>
                    </div>
                <% } %>
            </div>
          <% } %>
        </div>
    </div>

 <%- include("../partials/footer") %>
